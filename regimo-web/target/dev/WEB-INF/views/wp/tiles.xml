<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	
	<definition name="wp" extends="template">
		<put-attribute name="content" value="/WEB-INF/views/wp/home.jsp" />
	</definition>
	
	<definition name="posts" extends="template">
		<put-attribute name="content" value="/WEB-INF/views/wp/posts.jsp" />
	</definition>
	
	<definition name="post" extends="template">
		<put-attribute name="title" expression="Polonious - ${post.postTitle}" />
		<put-attribute name="content" value="/WEB-INF/views/wp/post.jsp" />
	</definition>
		
</tiles-definitions>